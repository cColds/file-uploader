generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique @db.VarChar(16)
  password String   @db.VarChar(128)
  folders  Folder[]
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  folderId  Int
  createdAt DateTime @default(now())
  size      BigInt
  folder    Folder   @relation(fields: [folderId], references: [id])
  url String 
}

// todo: set  folder name maximum characters maybe up to 24
// also regex shouldnt allow < > : " / \ | ? *
model Folder {
  id         Int      @id @default(autoincrement())
  name       String
  createdAt  DateTime @default(now())
  size       BigInt
  userId     Int
  parentId   Int?
  files      File[]
  parent     Folder?  @relation("NestedFolders", fields: [parentId], references: [id], onDelete: Cascade)
  subfolders Folder[] @relation("NestedFolders")
  user       User     @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
